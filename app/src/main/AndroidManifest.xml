<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.doelmi.keysmanager">

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/km_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/km_logo_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetailKunciActivity"
            android:label="@string/detail_kunci" />
        <activity
            android:name=".activity.AmbilKunciActivity"
            android:label="@string/ambil_kunci" />
        <activity
            android:name=".activity.KembaliKunciActivity"
            android:label="@string/kembali_kunci" />
        <activity
            android:name=".activity.DetailLogAktivitasActivity"
            android:label="@string/detail_log" />
        <activity
            android:name=".activity.TambahKunciActivity"
            android:label="@string/tambah_kunci" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.DaftarKunciDiarsipkan" />
        <activity
            android:name=".activity.EditKunciActivity"
            android:label="Edit Kunci"></activity>
    </application>

</manifest>